{
    "version": 3,
    "configurePresets": [
		{
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
			"binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vendor/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
		},
        {
            "name": "windows-base",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe",
				"CMAKE_CXX_FLAGS": "-DPLATFORM_WINDOWS -GS- -Gs1000000000 -GR- -Gm- -EHa- -Zl",
				"CMAKE_CXX_FLAGS_DEBUG": "", 
				"CMAKE_CXX_FLAGS_RELEASE": "", 
				"CMAKE_CXX_FLAGS_RELWITHDEBINFO": "", 
				"CMAKE_CXX_FLAGS_MINSIZEREL": "", 
				"CMAKE_EXE_LINKER_FLAGS": "-SUBSYSTEM:CONSOLE -NODEFAULTLIB -stack:0x200000,200000", 
				"CMAKE_STATIC_LINKER_FLAGS": "-NODEFAULTLIB", 
				"CMAKE_SHARED_LINKER_FLAGS": "-NODEFAULTLIB", 
				"CMAKE_CXX_STANDARD_LIBRARIES": "", 
				"CMAKE_CXX_COMPILER_FORCED": "TRUE", 
				"CMAKE_CXX_STANDARD": "23"

            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-base",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
				"CMAKE_CXX_FLAGS": "-DPLATFORM_LINUX"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "macos-base",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
				"CMAKE_CXX_FLAGS": "-DPLATFORM_MACOS"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug", 
				"CMAKE_CXX_FLAGS": "-Zi",
				"CMAKE_EXE_LINKER_FLAGS": "-DEBUG -Zi"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
				"CMAKE_EXE_LINKER_FLAGS": ""
            }
        },
        {
            "name": "windows-internal",
            "displayName": "Windows Internal",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
				"CMAKE_CXX_FLAGS": "-Zi",
				"CMAKE_EXE_LINKER_FLAGS": "-DEBUG"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-internal",
            "displayName": "Linux Internal",
            "inherits": "linux-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "inherits": "macos-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "macos-release",
            "displayName": "macOS Release",
            "inherits": "macos-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "macos-internal",
            "displayName": "macOS Internal",
            "inherits": "macos-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        }
    ]
}

